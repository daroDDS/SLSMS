<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.slsms.controller.AgentController"
            stylesheets="@../css/style.css">
    
    <left>
        <VBox styleClass="sidebar" prefWidth="240" spacing="2">
            <VBox styleClass="sidebar-header" style="-fx-background-color: #1A252F; -fx-padding: 20;">
                <Label text="AGENT PORTAL" styleClass="sidebar-label" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            </VBox>
            
            <Label text="ACCOUNT" style="-fx-text-fill: #7F8C8D; -fx-padding: 10 0 5 15; -fx-font-size: 11px;"/>
            <Button text="My Profile" styleClass="button-menu" maxWidth="Infinity" onAction="#showProfile"/>
            <Button text="Dashboard" styleClass="button-menu" maxWidth="Infinity" onAction="#showDashboard"/>

            <Label text="MANAGEMENT" style="-fx-text-fill: #7F8C8D; -fx-padding: 10 0 5 15; -fx-font-size: 11px;"/>
            <Button text="My Lands" styleClass="button-menu" maxWidth="Infinity" onAction="#showInventory"/>
            <Button text="My Buyers" styleClass="button-menu" maxWidth="Infinity" onAction="#showBuyers"/>
            <Button text="My Visits" styleClass="button-menu" maxWidth="Infinity" onAction="#showVisits"/>
            <Button text="My Sales" styleClass="button-menu" maxWidth="Infinity" onAction="#showSales"/>

            <Label text="ACTIONS" style="-fx-text-fill: #7F8C8D; -fx-padding: 10 0 5 15; -fx-font-size: 11px;"/>
            <Button text="+ Add Land" styleClass="button-menu" maxWidth="Infinity" onAction="#showAddLand"/>
            <Button text="+ Register Buyer" styleClass="button-menu" maxWidth="Infinity" onAction="#showRegisterBuyer"/>
            <Button text="+ Schedule Visit" styleClass="button-menu" maxWidth="Infinity" onAction="#showScheduleVisit"/>
            <Button text="+ Record Sale" styleClass="button-menu" maxWidth="Infinity" onAction="#showRecordSale"/>
            <Button text="Smart Recommender" styleClass="button-menu" maxWidth="Infinity" onAction="#showSmartRecommender"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Logout" styleClass="button-menu" maxWidth="Infinity" onAction="#logout"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <StackPane fx:id="contentArea" style="-fx-padding: 30; -fx-background-color: #ECF0F1;">
            </StackPane>
        </ScrollPane>
    </center>
</BorderPane>