<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.slsms.controller.AdminController"
            stylesheets="@../css/style.css">
    
    <left>
        <VBox styleClass="sidebar" prefWidth="250" spacing="5">
            <VBox styleClass="sidebar-header" style="-fx-background-color: #1A252F; -fx-padding: 20;">
                <Label text="SLSMS ADMIN" styleClass="sidebar-label" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            </VBox>
            
            <Button text="Dashboard Analytics" styleClass="button-menu" maxWidth="Infinity" onAction="#showDashboard"/>
            <Button text="Manage Agents" styleClass="button-menu" maxWidth="Infinity" onAction="#showAgents"/>
            <Button text="System Settings" styleClass="button-menu" maxWidth="Infinity" onAction="#showSettings"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Logout" styleClass="button-menu" maxWidth="Infinity" onAction="#logout"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <StackPane fx:id="contentArea" style="-fx-padding: 30; -fx-background-color: #ECF0F1;">
            </StackPane>
        </ScrollPane>
    </center>
</BorderPane>