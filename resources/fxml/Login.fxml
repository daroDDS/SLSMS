<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
           fx:controller="com.slsms.controller.LoginController"
           stylesheets="@../css/style.css">
    
    <VBox alignment="CENTER" spacing="20" maxWidth="350" maxHeight="450" styleClass="login-card">
        <Label text="SLSMS Login" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
        
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Username"/>
            <TextField fx:id="usernameField" promptText="Enter username"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Password"/>
            <PasswordField fx:id="passwordField" promptText="Enter password"/>
        </VBox>

        <Label fx:id="errorLabel" textFill="red"/>
        
        <Button text="Login" onAction="#handleLogin" styleClass="button-primary" maxWidth="Infinity"/>
        
        <Hyperlink text="No account? Create one here" onAction="#goToRegister" style="-fx-text-fill: #2980B9;"/>
    </VBox>
</StackPane>